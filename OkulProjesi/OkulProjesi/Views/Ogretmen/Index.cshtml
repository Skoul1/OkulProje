@model IEnumerable<Ogretmen>
@{
    ViewData["Title"] = "Ogretmen";
}

<div class="container mt-4">
    <h1 class="mb-4">Öğretmen İşlemleri</h1>
    <div class="text-end mb-3">
        <a asp-action="OgretmenEkle" asp-controller="Ogretmen" class="btn btn-primary">Öğretmen Ekle</a>
    </div>
    <table class="table table-hover shadow-sm">
        <thead class="table-light">
            <tr>
                <th>Bölüm</th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.OgretmenBolum</td>
                    <td>@item.OgretmenAdı</td>
                    <td>@item.OgretmenSoyAdı</td>
                    <td>
                        <a class="btn btn-sm btn-success" href="/Ogretmen/OgretmenDuzenle/@item.OgretmenId">Düzenle</a>
                        <a class="btn btn-sm btn-danger" href="/Ogretmen/OgretmenSil/@item.OgretmenId" onclick="return confirm('Bu Öğretmeni silmek istediğinize emin misiniz?');">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
